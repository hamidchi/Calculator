<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/et_userinput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/mediumSpace"
        android:layout_marginRight="@dimen/mediumSpace"
        android:textSize="@dimen/largeTxtSize"
        android:layout_marginTop="@dimen/smallSpace"
        android:background="@android:color/transparent"/>

    <TextView
        android:id="@+id/tv_userResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/mediumSpace"
        android:layout_marginRight="@dimen/mediumSpace"
        android:textSize="@dimen/largeTxtSize"
        android:textAlignment="gravity"
        android:gravity="right"
        android:layout_marginTop="@dimen/xxLargeSpace"
        />

</LinearLayout>